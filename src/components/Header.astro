---
import {
  SignedOut,
  SignInButton,
  SignedIn,
  UserButton,
} from "@clerk/astro/components";
import ThemeToggle from "./ThemeToggle.astro";

interface Props {
  title?: string;
}

const { title = "Mastermind Battle Online" } = Astro.props;
---

<header>
  <nav>
    <a href="/" class="logo" aria-label={title}>
      <span>MBO</span>
    </a>

    <div class="nav-actions">
      <ThemeToggle />
      <SignedOut>
        <SignInButton mode="modal" class="btn-primary">
          Iniciar Sesi√≥n
        </SignInButton>
      </SignedOut>
      <SignedIn>
        <UserButton />
      </SignedIn>
    </div>
  </nav>
</header>

<style>
  header {
    border-bottom: 1px solid var(--gray-200);
  }

  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    
    margin: 0 auto;
    padding: 1rem;
  }

  .logo {
    text-decoration: none;

    span {
      background: var(--primary-color);
      color: white;
      display: inline-block;
      font-size: 1.5rem;
      font-weight: bold;
      padding: 0.5rem 1rem;
      border-radius: 0.5rem;
      transition:
        transform 0.2s,
        box-shadow 0.2s;

      &:hover {
        transform: translateY(-2px);
        box-shadow:
          0 4px 6px -1px rgb(0 0 0 / 0.1),
          0 2px 4px -2px rgb(0 0 0 / 0.1);
      }
    }
  }

  .nav-actions {
    display: flex;
    gap: 1rem;
    align-items: center;
  }
</style>
